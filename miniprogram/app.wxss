/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.slider-label{
    display: flex;
}
.slider-label image{
  width: 46rpx;
  height: 46rpx;
  margin-top: 18rpx;
  margin-left: 16rpx;
}

.slider-label slider{
  width: 470rpx;
  margin: 20rpx;
}

.container .canvas{
  display: flex;
  align-items: center;
  height: 630rpx;
  justify-content: center;
}

.container .canvas image{
  width:400rpx;
  max-height: 610rpx;
  border-radius: 5rpx;
  box-shadow:0px 0px 14rpx #333333;
}

.container .control{
  display: flex;
  padding-top: 20rpx;
}

.container .img-button{
  padding: 14rpx;
  display: block;
}
.container .img-button .img-box{
  display: flex;
  width:145rpx;
  height: 145rpx;
  box-shadow:0rpx 5rpx 10rpx #333333;
  border-radius: 10rpx;
  padding: 20rpx;
  align-items: center;
  justify-content: center;
}

.container .img-button-replace .img-box{
  background: #ebf0f9;
}

.container .img-button .img-box:active{
  background: #ddd;
  box-shadow:0px 0px 10rpx #333333;
}

.container .img-button .img-box .img-box-inner{
  box-shadow:0px 0px 3rpx #000 inset,0px 0px 3rpx #000 inset,0px 0px 3rpx #000 inset,0px 0px 3rpx #000 inset;
  /* border-radius: 4rpx; */
  padding: 4rpx;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.container .img-button-save .img-box .img-box-inner{
  box-shadow: none;
}

.container .img-button .img-box image{
  width: 100%;
  height: 100%;
}

.container .img-button text{
  display: block;
  height: 46rpx;
  width: 155rpx;
  line-height: 46rpx;
  font-size: 22rpx;
  
  color: #333;
  text-align: center;
  overflow: hidden;
}

.sliders slider view{
  padding-top: 20rpx;
}

.sliders image{
  width: 38rpx;
  height: 38rpx;
  padding-right: 5rpx;
  vertical-align: middle;
}

.select-dialog{
  position: absolute;
  z-index: 2;
  width: 100vw;
  height: 100vh;
  display: block;
  top: 0;
  left: 0;
  font-size: 36rpx;
}

.select-dialog-mask{
  display: block;
  width: 100vw;
  height: 100vh;
  opacity: 0.3;
  background: #000;
  position: relative;
  left: 0;
  top: 0;
}

.select-dialog-content{
  position: absolute;
  left: 50%;
  box-shadow:0px 0px 14rpx #333333;
  background: #eee;
  border-radius: 8rpx;
  width: 640rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: -335rpx;
  z-index: 3;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.select-dialog-content .title{
  display: block;
  text-align: center;
}

.select-dialog-content .title2{
  font-size: 28rpx;
  color: rgb(36, 22, 22);
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.select-dialog-content scroll-view{
  height: 600rpx;
  display: block;
}

.select-dialog-content scroll-view image{
  width: 360rpx;
  height: 360rpx;
  display: block;
  border-radius: 5rpx;
  box-shadow:0px 0px 14rpx #333333;
  margin: 20rpx;
  margin-left: 120rpx;
}

.select-dialog-content button.m{
  margin-bottom: 8rpx;
}